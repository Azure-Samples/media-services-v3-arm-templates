{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mediaServicesAccountName": {
      "type": "string",
      "metadata": {
        "description": "The Media Services account in which the LiveEvent should be created."
      }
    },
    "liveEventName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The name of the new LiveEvent."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[concat(parameters('mediaServicesAccountName'), '/', parameters('liveEventName'))]",
      "type": "Microsoft.Media/mediaservices/liveEvent",
      "apiVersion": "2018-03-30-preview",
      "location": "[resourceGroup().location]",
      "properties": {
        "description": "Simple Live Event using RTMP with 2-second keyframe interval and no ip restriction",
        "input": {
          "streamingProtocol": "RTMP",
          "keyFrameIntervalDuration": "PT2S"
        },
        "preview": {
          "accessControl": {
            "ip": {
              "allow": [
                {
                  "name": "AllowAll",
                  "address": "0.0.0.0"
                }
              ]
            }
          }
        }
      }
    }
  ],
  "outputs": {}
}